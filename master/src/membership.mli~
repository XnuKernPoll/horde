
module Member : sig
  type t 
  val to_string: t -> string
  val of_string: string -> t
  val to_address: t -> string
end


module State: sig
  type t
  val add_to_group: t -> string -> member -> state
  val leave_group: t -> string -> member
  val merge: t -> t -> t
                         
  val group_membership: t -> string -> member list
  val of_string: string -> t
  val to_string: t -> string
                        
end                                             
                                    
module Server : sig
  type t
  val add_to_group: t -> string -> Member -> unit Lwt.t
  val view_group: t -> string -> unit Lwt.t
  val ping: t -> unit Lwt.t
  val leave_group: t -> string -> Member.t -> unit Lwt.t                                                val view_all: t -> unit Lwt.t 
end


                  
